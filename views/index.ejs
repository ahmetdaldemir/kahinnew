<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kripto Analiz Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .card {
            transition: transform 0.2s;
            margin-bottom: 20px;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .trend-up {
            color: #28a745;
        }
        .trend-down {
            color: #dc3545;
        }
        .confidence-high {
            color: #28a745;
        }
        .confidence-medium {
            color: #ffc107;
        }
        .confidence-low {
            color: #dc3545;
        }
        .last-update {
            font-size: 0.8rem;
            color: #6c757d;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-chart-line me-2"></i>
                Kripto Analiz Dashboard
            </a>
            <button class="btn btn-outline-light" onclick="runPredictions()">
                <i class="fas fa-sync-alt me-2"></i>
                Tahminleri Güncelle
            </button>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Son güncelleme: <%= lastUpdate %>
                </div>
            </div>
        </div>

        <!-- 1 Saatlik Tahminler Tablosu -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-clock me-2"></i>
                            1 Saatlik Tahminler (%5+ Kar, %50+ Güven)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sembol</th>
                                        <th>Güncel Fiyat</th>
                                        <th>Güven Oranı</th>
                                        <th>Kar Potansiyeli</th>
                                        <th>Sinyal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% predictions1h.forEach(coin => { %>
                                        <tr>
                                            <td><strong><%= coin.symbol %></strong></td>
                                            <td>$<%= parseFloat(coin.current_price).toFixed(2) %></td>
                                            <td class="<%= coin.confidence >= 70 ? 'confidence-high' : coin.confidence >= 50 ? 'confidence-medium' : 'confidence-low' %>">
                                                <%= parseFloat(coin.confidence).toFixed(2) %>%
                                            </td>
                                            <td class="trend-up">
                                                <%= parseFloat(coin.profit_loss).toFixed(2) %>%
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= coin.predicted_signal === 'BUY' ? 'success' : 'danger' %>">
                                                    <%= coin.predicted_signal %>
                    </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 4 Saatlik Tahminler Tablosu -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-clock me-2"></i>
                            4 Saatlik Tahminler (%5+ Kar, %50+ Güven)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sembol</th>
                                        <th>Güncel Fiyat</th>
                                        <th>Güven Oranı</th>
                                        <th>Kar Potansiyeli</th>
                                        <th>Sinyal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% predictions4h.forEach(coin => { %>
                                        <tr>
                                            <td><strong><%= coin.symbol %></strong></td>
                                            <td>$<%= parseFloat(coin.current_price).toFixed(2) %></td>
                                            <td class="<%= coin.confidence >= 70 ? 'confidence-high' : coin.confidence >= 50 ? 'confidence-medium' : 'confidence-low' %>">
                                                <%= parseFloat(coin.confidence).toFixed(2) %>%
                                            </td>
                                            <td class="trend-up">
                                                <%= parseFloat(coin.profit_loss).toFixed(2) %>%
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= coin.predicted_signal === 'BUY' ? 'success' : 'danger' %>">
                                                    <%= coin.predicted_signal %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yükseliş Trendindeki Coinler -->
        <div class="row mb-4">
            <div class="col">
                            <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-arrow-up me-2"></i>
                            Yükseliş Trendindeki Coinler
                        </h5>
                    </div>
                                <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sembol</th>
                                        <th>Güncel Fiyat</th>
                                        <th>24s Değişim</th>
                                        <th>Güven Oranı</th>
                                        <th>Kar Potansiyeli</th>
                                        <th>Sinyal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% uptrendCoins.forEach(coin => { %>
                                        <tr>
                                            <td><strong><%= coin.symbol %></strong></td>
                                            <td>$<%= parseFloat(coin.current_price).toFixed(2) %></td>
                                            <td class="trend-up">
                                                <i class="fas fa-arrow-up me-1"></i>
                                                <%= (coin.change24h || 0).toFixed(2) %>%
                                            </td>
                                            <td class="<%= coin.confidence >= 70 ? 'confidence-high' : coin.confidence >= 40 ? 'confidence-medium' : 'confidence-low' %>">
                                                <%= parseFloat(coin.confidence).toFixed(2) %>%
                                            </td>
                                            <td class="<%= coin.profit_loss >= 0 ? 'trend-up' : 'trend-down' %>">
                                                <%= parseFloat(coin.profit_loss).toFixed(2) %>%
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= coin.predicted_signal === 'BUY' ? 'success' : 'danger' %>">
                                                    <%= coin.predicted_signal %>
                                        </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>

        <!-- En Yüksek Güven Oranlı Coinler -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-shield-alt me-2"></i>
                            En Yüksek Güven Oranlı Coinler
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sembol</th>
                                        <th>Güven Oranı</th>
                                        <th>Güncel Fiyat</th>
                                        <th>24s Değişim</th>
                                        <th>Kar Potansiyeli</th>
                                        <th>Sinyal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% highConfidenceCoins.forEach(coin => { %>
                                        <tr>
                                            <td><strong><%= coin.symbol %></strong></td>
                                            <td class="<%= coin.confidence >= 70 ? 'confidence-high' : coin.confidence >= 40 ? 'confidence-medium' : 'confidence-low' %>">
                                                <%= parseFloat(coin.confidence).toFixed(2) %>%
                                            </td>
                                            <td>$<%= parseFloat(coin.current_price).toFixed(2) %></td>
                                            <td class="<%= coin.change24h >= 0 ? 'trend-up' : 'trend-down' %>">
                                                <i class="fas fa-arrow-<%= coin.change24h >= 0 ? 'up' : 'down' %> me-1"></i>
                                                <%= coin.change24h.toFixed(2) %>%
                                            </td>
                                            <td class="<%= coin.profit_loss >= 0 ? 'trend-up' : 'trend-down' %>">
                                                <%= parseFloat(coin.profit_loss).toFixed(2) %>%
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= coin.predicted_signal === 'BUY' ? 'success' : 'danger' %>">
                                                    <%= coin.predicted_signal %>
                                                </span>
                                            </td>
                                        </tr>
                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- En Yüksek Kar Potansiyelli Coinler -->
        <div class="row">
            <div class="col">
                            <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            En Yüksek Kar Potansiyelli Coinler
                        </h5>
                    </div>
                                <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sembol</th>
                                        <th>Kar Potansiyeli</th>
                                        <th>Güven Oranı</th>
                                        <th>Güncel Fiyat</th>
                                        <th>24s Değişim</th>
                                        <th>Sinyal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% highProfitCoins.forEach(coin => { %>
                                        <tr>
                                            <td><strong><%= coin.symbol %></strong></td>
                                            <td class="trend-up">
                                                <%= parseFloat(coin.profit_loss).toFixed(2) %>%
                                            </td>
                                            <td class="<%= coin.confidence >= 70 ? 'confidence-high' : coin.confidence >= 40 ? 'confidence-medium' : 'confidence-low' %>">
                                                <%= parseFloat(coin.confidence).toFixed(2) %>%
                                            </td>
                                            <td>$<%= parseFloat(coin.current_price).toFixed(2) %></td>
                                            <td class="<%= coin.change24h >= 0 ? 'trend-up' : 'trend-down' %>">
                                                <i class="fas fa-arrow-<%= coin.change24h >= 0 ? 'up' : 'down' %> me-1"></i>
                                                <%= coin.change24h.toFixed(2) %>%
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= coin.predicted_signal === 'BUY' ? 'success' : 'danger' %>">
                                                    <%= coin.predicted_signal %>
                                        </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- %5+ Kar Potansiyelli İlk 10 Coin Tablosu -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-coins me-2"></i>
                            %5+ Kar Potansiyelli İlk 10 Coin (Anlık)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sembol</th>
                                        <th>Kar Potansiyeli</th>
                                        <th>Güven Oranı</th>
                                        <th>Güncel Fiyat</th>
                                        <th>Sinyal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% topProfitCoins.forEach(coin => { %>
                                        <tr>
                                            <td><strong><%= coin.symbol %></strong></td>
                                            <td class="trend-up">
                                                <%= parseFloat(coin.profit_loss).toFixed(2) %>%
                                            </td>
                                            <td class="<%= coin.confidence >= 70 ? 'confidence-high' : coin.confidence >= 50 ? 'confidence-medium' : 'confidence-low' %>">
                                                <%= parseFloat(coin.confidence).toFixed(2) %>%
                                            </td>
                                            <td>$<%= parseFloat(coin.actual_price).toFixed(2) %></td>
                                            <td>
                                                <span class="badge bg-<%= coin.predicted_signal === 'BUY' ? 'success' : 'danger' %>">
                                                    <%= coin.predicted_signal %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- %50+ Güven Oranlı İlk 10 Coin Tablosu -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-shield-alt me-2"></i>
                            %50+ Güven Oranlı İlk 10 Coin (Yapay Zeka)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sembol</th>
                                        <th>Güven Oranı</th>
                                        <th>Kar Potansiyeli</th>
                                        <th>Güncel Fiyat</th>
                                        <th>Sinyal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% topConfidenceCoins.forEach(coin => { %>
                                        <tr>
                                            <td><strong><%= coin.symbol %></strong></td>
                                            <td class="<%= coin.confidence >= 70 ? 'confidence-high' : coin.confidence >= 50 ? 'confidence-medium' : 'confidence-low' %>">
                                                <%= parseFloat(coin.confidence).toFixed(2) %>%
                                            </td>
                                            <td class="trend-up">
                                                <%= parseFloat(coin.profit_loss).toFixed(2) %>%
                                            </td>
                                            <td>$<%= parseFloat(coin.actual_price).toFixed(2) %></td>
                                            <td>
                                                <span class="badge bg-<%= coin.predicted_signal === 'BUY' ? 'success' : 'danger' %>">
                                                    <%= coin.predicted_signal %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function runPredictions() {
            fetch('/api/run-predictions', {
                method: 'POST'
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                    alert('Tahminler güncelleniyor...');
                    setTimeout(() => {
                        window.location.reload();
                    }, 5000);
                    } else {
                    alert('Tahmin güncelleme hatası: ' + data.error);
                    }
                })
                .catch(error => {
                alert('Bir hata oluştu: ' + error);
                });
        }
    </script>
</body>
</html> 