<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Analyzer Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .prediction-card {
            transition: transform 0.2s;
        }
        .prediction-card:hover {
            transform: translateY(-5px);
        }
        .buy {
            border-left: 4px solid #28a745;
        }
        .sell {
            border-left: 4px solid #dc3545;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand mb-0 h1">Crypto Analyzer</span>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Price Chart</h5>
                        <canvas id="priceChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <% predictions.forEach(function(prediction) { %>
                <div class="col-md-4 mb-4">
                    <div class="card prediction-card <%= prediction.signal.toLowerCase() %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= prediction.symbol %></h5>
                            <p class="card-text">
                                <strong>Signal:</strong> <span class="badge bg-<%= prediction.signal === 'BUY' ? 'success' : 'danger' %>"><%= prediction.signal %></span><br>
                                <strong>Confidence:</strong> <%= prediction.confidence %>%<br>
                                <strong>Current Price:</strong> $<%= prediction.currentPrice %><br>
                                <strong>24h Change:</strong> <span class="<%= prediction.priceChange24h >= 0 ? 'text-success' : 'text-danger' %>"><%= prediction.priceChange24h %>%</span><br>
                                <strong>24h Volume:</strong> $<%= prediction.volume24h %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        // Price Chart
        const ctx = document.getElementById('priceChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: <%- JSON.stringify(chartData.labels) %>,
                datasets: [{
                    label: 'BTC/USDT Price',
                    data: <%- JSON.stringify(chartData.prices) %>,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'BTC/USDT Price History'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });
    </script>
</body>
</html> 