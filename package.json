{
  "name": "crypto-analyzer",
  "version": "1.0.0",
  "description": "Cryptocurrency trading analysis application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pm2:start": "pm2 start server.js --name kahin-app",
    "pm2:stop": "pm2 stop kahin-app",
    "pm2:restart": "pm2 restart kahin-app",
    "pm2:delete": "pm2 delete kahin-app",
    "pm2:logs": "pm2 logs kahin-app",
    "pm2:status": "pm2 status",
    "auto:start": "pm2 start server.js --name kahin-app --watch --max-memory-restart 300M",
    "auto:install": "pm2 install pm2-logrotate && pm2 set pm2-logrotate:max_size 10M && pm2 set pm2-logrotate:retain 7",
    "init-db": "node init-db.js",
    "fetch-historical": "node scripts/fetch-historical-data.js",
    "fetch-realtime": "node scripts/fetch-realtime-data.js",
    "ml-prediction": "node scripts/ml-prediction.js",
    "generate-signals": "node scripts/generate-signals.js",
    "signals": "node scripts/generate-signals.js"
  },
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.22.0",
    "axios": "^1.10.0",
    "ccxt": "^4.2.15",
    "chart.js": "^4.5.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "ml-random-forest": "^2.1.0",
    "moment": "^2.30.1",
    "mysql2": "^3.14.1",
    "node-binance-api": "^1.0.10",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
